			DarkText.Font($Font,"---",(ubox.x+math.floor(ubox.w*0.25)),ubox.ey-30)
		else
			DarkText.Font($Font,Item[ch.Data.Jewel].Name,(ubox.x+math.floor(ubox.w*0.25)),ubox.ey-30)
		end
